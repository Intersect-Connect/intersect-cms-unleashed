{% extends 'Application/BritaniaR/base_install.html.twig' %}

{% block title %}
	{{"Configuration du site"|trans}}
{% endblock %}

{% block body %}

	<h1 class="mb-3">
		{{ 'Configuration du site'|trans }}
	</h1>

	<section class="bg-white p-3">
		<div class="mb-3">
			<p>
                {{"Cette étape est facultative et les données pourront être modifier dans les paramètres de l'Administration."|trans}}
            </p>
		</div>

		<form action="{{path("installation.three")}}" method="POST">
			<div class="mt-3 mb-3">
				<label for="title">{{"Le titre de votre jeu (titre du site)"|trans}}</label>
				<input type="text" id="title" name="title" class="form-control w-100" placeholder="{{"Le titre de votre jeu (titre du site)"|trans}}">
			</div>

			<div class="mt-3 mb-3">
				<label for="description">{{"Description du jeu (255 caractères)"|trans}}</label>
				<input type="text" id="description" name="description" class="form-control w-100" placeholder="{{"Description du jeu (255 caractères)"|trans}}">
			</div>

			<div class="p-3 text-center">
				<button type="submit" class="customBTN  w-100 mb-4">
					{{"Suivant"|trans}}
				</button>

				<a href="{{path('installation.two')}}" class="customBTN mb-4">
					{{"Retour"|trans}}
				</a>
			</div>
		</form>

	</section>
{% endblock %}
