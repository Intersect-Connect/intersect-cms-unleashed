{% extends 'Application/BritaniaR/base_install.html.twig' %}

{% block title %}
	{{"Accueil"|trans}}
{% endblock %}

{% block body %}

	<h1 class="mb-3">
		{{ 'Installation du CMS'|trans }}
	</h1>

	<section class="bg-white p-3">

		<h1 class="mb-3">
			{{ 'Bienvenue dans l\'installateur de Intersect CMS'|trans }}
		</h1>
		<div class="mb-3">
			<p>
                L'installateur va vous aidez à installer et configurer correctement votre site internet.
            </p>

			<h2>
				{{"Requis"|trans}}
			</h2>

			<ul class="list-group w-50">
				<li class="list-group-item d-flex justify-content-between align-items-center">
					PHP 8.0+
					{% if not phpversion > 8.0 %}
						<i class="bi bi-x-circle-fill text-danger"></i>
						{% else %}
						<i class="bi bi-check-circle-fill text-success"></i>
					{% endif %}
				</li>
				<li class="list-group-item d-flex justify-content-between align-items-center">
					{{"Base de donnée installé"|trans}} ({{dbReady ? "(Installation à suivre)"|trans : ""}})
					{% if dbReady %}
						<i class="bi bi-x-circle-fill text-danger"></i>
						{% else %}
						<i class="bi bi-check-circle-fill text-success"></i>
					{% endif %}
				</li>
			</ul>
		</div>

		<div class="p-3 text-center">
			<a href="{{path('installation.one')}}" class="customBTN  w-100 mb-4">
				{{"Démarrer"|trans}}
			</a>
		</div>
	</section>
{% endblock %}
