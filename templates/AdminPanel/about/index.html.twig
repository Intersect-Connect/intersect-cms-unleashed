{% extends 'AdminPanel/base.html.twig' %}

{% block title %}
	{{"A propos"|trans}}
{% endblock %}

{% block body %}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">{{"A propos"|trans}}</h6>
		</div>
		<div class="card-body">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success text-dark">
					{{ message }}
				</div>
			{% endfor %}

			{% for message in app.flashes('error') %}
				<div class="alert alert-danger text-dark">
					{{ message }}
				</div>
			{% endfor %}

			<div class="row">
				<div class="col-md-6">
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">{{"Mise à jour"|trans}}</h6>
						</div>
						<div id="updateDiv" class="card-body">
							<p>{{"Version actuel"|trans}}
								:
								{{versionLocal}}</p>
							{% if updateAvailable == false %}
								<button id="verifyUpdate" class="btn btn-primary">
									{{"Vérifiez les mises à jours"|trans}}
								</button>
							{% else %}
								<button id="downloadUpdate" class="btn btn-primary">
									{{"Télécharger la mise à jour"|trans}}
								</button>
							{% endif %}
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">{{"Message du développeur"|trans}}</h6>
						</div>
						<div class="card-body p-3">
							<p>A year ago I created this project with the aim that it could help many Intersect game developers.</p>
							<p>I am happy to continue the updates on this project that is close to my heart and to help you develop your project as well as possible.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{asset("assets/admin/js/update.js")}}" defer></script>
{% endblock %}
