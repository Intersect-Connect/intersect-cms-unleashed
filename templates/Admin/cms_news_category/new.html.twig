{% extends 'Admin/admin.html.twig' %}

{% block title %}{{'Créer une catégorie d\'article'|trans}}{% endblock %}

{% block body %}

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">{{'Créer une catégorie d\'article'|trans}}</h6>
  </div>
  <div class="card-body">
    <form method="POST">
      <div class="form-group mt-3 mb-3">
        <input type="text" class="form-control" name="name" placeholder="{{" Nom de la catégorie"|trans}}">
      </div>
      <div class="form-group mt-3 mb-3">
        <input type="color" class="form-control" name="color" placeholder="{{" Nom de la catégorie"|trans}}">
      </div>
      <button class="btn btn-success btn-block mb-3">{{"Sauvegarder"|trans}}</button>
    </form>
    <a class="btn btn-primary btn-block mt-3" href="{{ path('cms_news_index') }}">{{"Retour à la liste"|trans}}</a>
  </div>
</div>
{% endblock %}