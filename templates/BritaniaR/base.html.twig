<!doctype html>
<html lang="fr">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<link rel="icon" type="image/png" href="{{asset('assets/general/seo/icon.png')}}" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
	<title>{% block title %}{% endblock %} - {{settings.get('game_title')}} | {{settings.get('seo_description')}}</title>

	{# Global Preload #}
	<link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" as="style" crossorigin>
	<link rel="preload" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" as="style" crossorigin>
	<link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/froala-design-blocks/2.0.1/css/froala_blocks.min.css" as="style" crossorigin>
	{# End Global Preload #}

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/froala-design-blocks/2.0.1/css/froala_blocks.min.css" integrity="sha512-EL6Rvx7rsmwQtQldLDkQSKKKmIJG7S6l5UthckgEwNzOQiZMrL6Ls2S9QFdLEEuADFszu0n1bKUuw8EFtXrVYg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" type="text/css" href="{{asset('assets/themes/' ~ settings.get("theme") ~ '/css/stylesheet.css')}}" />
	<link rel="stylesheet" type="text/css" href="{{asset('assets/themes/' ~ settings.get("theme") ~ '/css/fontawesome.css')}}" />
	<link rel="stylesheet" type="text/css" href="{{asset('assets/themes/' ~ settings.get("theme") ~ '/css/custom.min.css')}}" />

	{% block stylesheets %}{% endblock %}

	{% block seo %}
	<!-- Primary Meta Tags -->
	<meta name="title" content="{{settings.get('game_title')}} | {{settings.get('seo_description')}}">
	<meta name="description" content="{{settings.get('seo_description')}}">

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website">
	<meta property="og:url" content="{{app.request.uri}}">
	<meta property="og:title" content="{{settings.get('game_title')}} | {{settings.get('seo_description')}}">
	<meta property="og:description" content="{{settings.get('seo_description')}}">
	<meta property="og:image" content="{{asset('assets/general/seo/seo.png')}}">

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:url" content="{{app.request.uri}}">
	<meta property="twitter:title" content="{{settings.get('game_title')}} | {{settings.get('seo_description')}}">
	<meta property="twitter:description" content="{{settings.get('seo_description')}}">
	<meta property="twitter:image" content="{{asset('assets/general/seo/seo.png')}}">
	{% endblock %}

	<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js" defer></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous" defer></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous" defer></script>
	<script type="text/javascript" src="{{asset('assets/themes/' ~ settings.get("theme") ~ '/js/interface.min.js')}}" defer></script>
	{% block javascripts %}{% endblock %}

</head>


<body>
	<header>
		<div class="ct">
			{% include settings.get('theme') ~ "/includes/navbar.html.twig" %}
		</div>
	</header>

	<div class="ct pb-5">
		<a id="logo" href="{{ path('home') }}" title=" {{ 'home'|trans }}">
			<img src="{{asset('assets/themes/' ~ settings.get("theme") ~ '/img/logotype.png')}}" alt="{{settings.get('game_title')}} logo">
		</a>
		<main>

			<div id="content">
				{% block body %}{% endblock %}
			</div>
			<aside>
				{% include settings.get('theme') ~ "/includes/aside.html.twig" %}
			</aside>

		</main>
	</div>

	<footer class="footer mt-5 d-none">
		<div class="container">
			<p class="text-center text-white p-3">
				<strong>
					{{settings.get('game_title')}} © {{''|date('Y')}} {{ 'all_rights_reserved'|trans }}. {{
					'graphic_concept_by'|trans }} Nicow - wb x dsg. {{ 'developped_by'|trans }} <a
						href="https://github.com/Thomasfds/intersect-cms-unleashed">XFallSeane</a>
				</strong>. <br>
				<a href="{{path('game.pages', {"slug":'legal-notice'})}}">{{"Mentions légales"|trans}}</a> | 
				<a href="{{path('game.pages', {"slug":'terms-and-conditions'})}}">{{"Conditions Générales de Ventes"|trans}}</a> |
				<a href="{{path('game.pages', {"slug":'confidentiality'})}}">{{"Confidentialités"|trans}}</a>
		</div>
	</footer>
</body>