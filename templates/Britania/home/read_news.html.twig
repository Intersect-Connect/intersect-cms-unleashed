{% extends "base.html.twig" %}

{% block title %}
dd
{% endblock %}

{% block body %}

<h1>
    {{ 'news'|trans }}
</h1>
<ul id="breadcrump">
    <li>
        <a href="{{path('home')}}">{{ 'home'|trans }}</a>
    </li>
    <li>{{news.title}}</li>
</ul>

<div id="news" class="read">
    <article>
        <div class="header" style="background-image:url('{{asset('assets/general/news/'~ news.imgUrl)}}');">
            <h2>
                <img src="{{asset('assets/themes/' ~ theme ~ '/img/i_news.png')}}" alt="Icône des articles"
                    loading="lazy">
                {{news.title}}
            </h2>
        </div>
        <p>

            {{news.content|raw }}
        </p>
        <div class="footer">
            {{ 'Publié le'|trans }} <strong>{{ news.date|date('d/m/Y') }}</strong> {{ 'par'|trans }}
            <strong>
                {{news.author}}.
            </strong>
        </div>
    </article>
    <div class="clear"></div>
</div>



{% endblock %}