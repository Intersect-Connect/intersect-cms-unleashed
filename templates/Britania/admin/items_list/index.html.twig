{% extends 'base.html.twig' %}

{% block title %}{{"Liste des items"|trans}}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block body %}


<section id="news">
  <div class="card border-0">
    <div class="card-header p-0 border-0">
      <h1>{{"Liste des items"|trans}}</h1>

      <ul id="breadcrump">
        <li><a href="/admin">Administration</a></li>
        <li>{{"Liste des items"|trans}}</li>
      </ul>
    </div>
    <div class="card-body border-0">
      <table class="ladder table table-striped py-3">
        <thead>
          <tr>
            <th>{{"Id de l'item"|trans}}</th>
            <th class="c">{{"Nom de l'item"|trans}}</th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
          <tr>
            <td class="item_id">
              {{ item.Value.Id }}
            </td>
            <td class="c">{{ item.Value.Name }}</td>
          </tr>
          {% else %}
          <div class="alert alert-info">
            Aucune information disponible.
          </div>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

</section>
{% endblock %}

{% block javascripts %}
<script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
        $('.table').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
            },
            "lengthChange":false
        });
    });
</script>
{% endblock %}