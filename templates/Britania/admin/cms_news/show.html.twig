{% extends 'base.html.twig' %}

{% block title %}CmsNews{% endblock %}

{% block body %}
    <h1>CmsNews</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cms_news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cms_news.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ cms_news.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cms_news.date ? cms_news.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ cms_news.author }}</td>
            </tr>
            <tr>
                <th>ImgUrl</th>
                <td>{{ cms_news.imgUrl }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ cms_news.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cms_news_index') }}">back to list</a>

    <a href="{{ path('cms_news_edit', {'id': cms_news.id}) }}">edit</a>

    {{ include('cms_news/_delete_form.html.twig') }}
{% endblock %}
