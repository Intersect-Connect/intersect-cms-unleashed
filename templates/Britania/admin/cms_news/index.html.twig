{% extends 'base.html.twig' %}

{% block title %}{{'Liste des articles'|trans}}{% endblock %}

{% block body %}

<div class="card rounded-0 bg-transparent">
    <div class="card-header bg-transparent p-0">
        <h1>{{'Liste des articles'|trans}}</h1>
        <ul id="breadcrump">
            <li><a href="{{path('admin')}}">{{"Administration"|trans}}</a></li>
            <li>{{'Gérer les news'|trans}}</li>
        </ul>
    </div>
    <div class="card-body bg-white">
        <a class="btn btn-sm btn-primary" href="{{ path('cms_news_new') }}">{{'Créer un article'|trans}}</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{'Titre'|trans}}</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for cms_news in cms_news %}
                <tr>
                    <td>{{ cms_news.id }}</td>
                    <td>{{ cms_news.title }}</td>
                    <td>{{ cms_news.date ? cms_news.date|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('cms_news_edit', {'id': cms_news.id}) }}">{{"Modifier"|trans}}</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8">{{"Aucun enregistrement trouvé"|trans}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}